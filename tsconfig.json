{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true
  },
  "include": ["src/**/*"]
}
